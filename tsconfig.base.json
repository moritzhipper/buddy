   "compilerOptions": {
      "rootDir": ".",
      "sourceMap": true,
      "strict": false,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "target": "es2015",
