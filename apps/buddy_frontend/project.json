{
  "name": "buddy_frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/buddy_frontend/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/buddy_frontend",
        "index": "apps/buddy_frontend/src/index.html",
        "main": "apps/buddy_frontend/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/buddy_frontend/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/buddy_frontend/src/assets",
          "apps/buddy_frontend/src/manifest.webmanifest"
        ],
        "styles": ["apps/buddy_frontend/src/style/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": [
            "apps/buddy_frontend/src/style"
          ]
        },
        "scripts": []
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/buddy_frontend/src/environments/environment.ts",
              "with": "apps/buddy_frontend/src/environments/environment.prod.ts"
            }
          ],
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "5kb"
            }
          ],
          "optimization": true,
          "serviceWorker": true,
          "ngswConfigPath": "apps/buddy_frontend/src/ngsw-config.json"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "buddy_frontend:build:production"
        },
        "development": {
          "buildTarget": "buddy_frontend:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "buddy_frontend:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/buddy_frontend/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "buddy_frontend:build",
        "port": 4200,
        "spa": true
      }
    },
    "serve-pwa-prod": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "buddy_frontend:build:production",
        "port": 8080
      }
    }
  }
}
